<FlowPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <GridPane alignment="center" gridLinesVisible="true" hgap="10" vgap="10">
          <rowConstraints>
              <RowConstraints minHeight="300.0" prefHeight="300.0" />
          </rowConstraints>
          <columnConstraints>
              <ColumnConstraints minWidth="50.0" prefWidth="300.0" />
              <ColumnConstraints minWidth="100.0" prefWidth="300.0" />
              <ColumnConstraints minWidth="10.0" prefWidth="300.0" />
              <ColumnConstraints minWidth="100.0" prefWidth="300.0" />
          </columnConstraints>
          <children>
              <ImageView fx:id="mainImage" fitHeight="255.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="CENTER" GridPane.valignment="TOP">
                  <GridPane.margin>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </GridPane.margin>
              </ImageView>
              <ImageView fx:id="detectorsImage" fitHeight="255.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="TOP">
                  <GridPane.margin>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </GridPane.margin>
              </ImageView>
              <Canvas fx:id="detectorsCanvas" height="255.0" width="255.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="TOP">
                  <GridPane.margin>
                      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                  </GridPane.margin>
              </Canvas>
            <ImageView fx:id="finalImage" fitHeight="255.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
            <ImageView fx:id="sinogramImage" fitHeight="255.0" fitWidth="255.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
          </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </GridPane>
      <Pane prefHeight="200.0" prefWidth="1240.0">
         <children>
            <Button fx:id="startButton" layoutX="14.0" layoutY="150.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="293.0" text="Button" />
            <TextField fx:id="alphaTextEdit" layoutX="14.0" layoutY="14.0" />
            <TextField fx:id="betaTextEdit" layoutX="14.0" layoutY="54.0" />
            <TextField fx:id="detectorsTextEdit" layoutX="14.0" layoutY="100.0" />
            <Label layoutX="206.0" layoutY="19.0" text="Alpha" />
            <Label layoutX="206.0" layoutY="59.0" text="Beta" />
            <Label layoutX="206.0" layoutY="105.0" text="Number of detectors" />
            <Button fx:id="chooseFileButton" layoutX="341.0" layoutY="150.0" mnemonicParsing="false" text="ChooseFIle" />
         </children>
      </Pane>
   </children>
</FlowPane>
